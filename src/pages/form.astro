---
import Layout from "../layouts/Layout.astro"

const sheetURL = "https://script.google.com/macros/s/AKfycbz06T_llBRC8F7tI8Kqa30b8qOnLZnCqJMJuiWcM0ynoldL5-GHB97je3TgsCzrUJzu/exec";
---

<Layout title="フォームページ">
    <main class="p-2">
        <h2 class="text-lg md:text-3xl text-center font-bold my-5">予定入力フォーム</h2>

        <div class="flex justify-center">
            <iframe src="https://calendar.google.com/calendar/embed?height=600&wkst=1&ctz=Asia%2FTokyo&bgcolor=%23ffffff&showTz=0&showCalendars=0&showPrint=0&showTitle=0&mode=WEEK&src=YWVlN2NmMTY3ODAyNzhhZjdjNGJkOThiNmVhMjVlMGY4ODVjMTQwOGRlMjI5MGIxNzY3YTVmZTYzNzk0NTMxZUBncm91cC5jYWxlbmRhci5nb29nbGUuY29t&color=%23F4511E" style="border-width:0" height="600"></iframe>
        </div>
        <form 
            action={sheetURL} 
            method="POST" 
            class="flex flex-col md:items-center gap-3 border border-gray-300 rounded-md p-3">
            <div class="flex md:items-center flex-col md:flex-row gap-3">
                <label for="name">名前</label>
                    <input
                        type="text"
                        id="name"
                        name="username"
                        class="border border-gray-300 py-2">
                <label for="start">開始</label>
                    <input
                        type="datetime-local"
                        id="start"
                        name="start_date"
                        class="border border-gray-300 py-2"
                        min="09:00"
                        max="18:00">
                <label for="end">終了</label>
                    <input
                        type="datetime-local"
                        id="end"
                        name="end_date"
                        class="border border-gray-300 py-2"
                        min="09:00"
                        max="18:00">
            </div>
            <button class="w-full p-3 bg-blue-500 text-white hover:bg-white hover:border hover:border-blue-500 hover:text-blue-500">送信</button>
        </form>
    </main>
</Layout>


<style>
    iframe{
        max-width: 800px;
        width: 95%;
    }
    @media screen and (max-width: 425px){
		iframe{
			width: 100%;
		}
		
	}
</style>